# Update Ubuntu
sudo apt-get update

#Install packages
echo "-------provision: Installing Apache2...., Mysql server5.6....., php5.6......."
sudo apt-get install apache2
#  Add softaware 
sudo apt-get install python-software-properties
sudo add-apt-repository -y ppa:ondrej/php5.6
sudo add-apt-repository -y ppa:ondrej/mysql-5.6
sudo apt-get update
sudo apt-get install mysql-server-5.6 php5.6 php5.6-fpm php5.6-mysql

sudo apt-get install php5.6-gd php5.6-dom php5.6-cli php5.6-json php5.6-common php5.6-mbstring php5.6-opcache php5.6-readline


